{
  "$schema": "https://plugins.dprint.dev/dprint/dprint-plugin-typescript/latest/schema.json",
  "typescript": {
    "indentWidth": 2,
    "useTabs": false,
    "semiColons": "asi",
    "quoteStyle": "alwaysDouble"
  },
  "json": {
    "indentWidth": 2,
    "useTabs": false
  },
  "markdown": {},
  "toml": {},
  "dockerfile": {},
  "includes": [
    "./**/*.{ts,tsx,js,jsx,cjs,mjs,json,md,toml,dockerfile}"
  ],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "**/dist",
    "/.yarn",
    "/packages/prisma-client",
    "**/.next",
    ".svelte-kit",
    "build"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.85.0.wasm",
    "https://plugins.dprint.dev/json-0.17.3.wasm",
    "https://plugins.dprint.dev/markdown-0.15.3.wasm",
    "https://plugins.dprint.dev/toml-0.5.4.wasm",
    "https://plugins.dprint.dev/dockerfile-0.3.0.wasm"
  ]
}
